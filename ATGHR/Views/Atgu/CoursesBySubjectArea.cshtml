						<div class="item">
							<div class="right floated content">
								<a asp-action="CourseInDetail" asp-route-courseId="@course.Id" class="ui inverted primary button">Details</a>
							</div>

							<i class="chevron right  middle aligned icon"></i>
							<div class="content">
								<a class="header">Course: @course.Title</a>
