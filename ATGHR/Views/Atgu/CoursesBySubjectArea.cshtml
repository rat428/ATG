<div class="item">
	<i class="large sort down  middle aligned icon"></i>
	<div class="content">
		<h4>Business Development (BD)</h4>
	</div>
</div>
@if (Model.Courses.Any(x => x.SubjectArea == CourseSubject.BD && x.CourseType == CourseType.ThirdParty))
{
	<div class="item">
		<div class="ui relaxed divided list">
			<div class="item">
				<i class="large sort down  middle aligned icon"></i>
